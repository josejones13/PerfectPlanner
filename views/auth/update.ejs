<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>

<div class="container mt-5" style="max-width: 600px;">
    <h2 class="mb-4">Update Information</h2>

    <form action="/update" method="POST">
        <div class="form-group mb-3">
            <label for="field">Field to Update:</label>
            <input type="text" name="field" id="field" class="form-control" placeholder="Enter field name" required>
        </div>

        <div class="form-group mb-3">
            <label for="value">New Value:</label>
            <input type="text" name="value" id="value" class="form-control" placeholder="Enter new value" required>
        </div>

        <button type="submit" class="btn btn-primary w-100">Submit Update</button>
    </form>
</div>

