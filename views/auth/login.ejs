<%- include('../partials/header.ejs') %>
    <%- include('../partials/nav.ejs') %>

        <div class="container mt-5" style="max-width: 500px;">
            <h2 class="mb-4 text-center">Login</h2>

            <% if (error) { %>
                <div class="alert alert-danger">
                    <%= error %>
                </div>
                <% } %>

                    <% if (typeof success !=='undefined' && success) { %>
                        <div class="alert alert-success">
                            <%= success %>
                        </div>
                        <% } %>


                            <form method="POST" action="/auth/login" autocomplete="off">
                                <fieldset class="form-group mb-3">
                                    <label for="username">Username:</label>
                                    <input type="text" name="username" id="username" class="form-control"
                                        placeholder="Enter your username" required autofocus>
                                </fieldset>


                                <fieldset class="form-group mb-3">
                                    <label for="password">Password:</label>
                                    <input type="password" name="password" id="password" class="form-control"
                                        placeholder="Enter your password" required>
                                </fieldset>

                                <div class="d-flex justify-content-between mt-3">
                                    <button type="submit" class="btn btn-success">Login</button>
                                    <a href="/auth/login" class="btn btn-warning">Cancel</a>
                                </div>
                            </form>

                            <p class="mt-2 text-center">
                                <a href="/auth/forgot">Forgot your password?</a>
                            </p>

                            <hr>

                            <div class="text-center mb-3">
                                <a href="/auth/google" class="btn btn-danger w-100 mb-2">Login with Google</a>
                                <a href="/auth/github" class="btn btn-dark w-100 mb-2">Login with GitHub</a>
                                <a href="/auth/discord" class="btn btn-primary w-100">Login with Discord</a>
                            </div>

                            <p class="mt-3 text-center">
                                Don't have an account? <a href="/auth/register">Register here</a>
                            </p>
        </div>

        <%- include('../partials/footer.ejs') %>